{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017",
      "es2018",
      "es2019"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "target": "esnext",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "maxNodeModuleJsDepth": 3,
    "paths": {},
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "./src/types",
      "*/types"
    ]
  },
  "exclude": [
    "dist",
    ".temp",
    "logs",
    "mock"
  ]
}